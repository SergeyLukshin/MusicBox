<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@xml/roundcorner">

    <include
        android:id="@+id/llTop"
        layout="@layout/ltop"
        android:visibility="gone" />

    <include
        android:id="@+id/llmain"
        layout="@layout/lwait"
        android:visibility="visible" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/llImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/widget_selector"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvMainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_main" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/llImage"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/widget_selector"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Наименование"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTitleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Наименование"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llmain2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll1"
                    style="@style/l_h_item">

                    <TextView
                        android:id="@+id/tvMusic1"
                        style="@style/tv_h_item"></TextView>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_img1"
                        style="@style/llimg_h_item">

                        <ProgressBar
                            android:id="@+id/ivMusicImageLoad1_"
                            style="@style/pb_h_item"></ProgressBar>

                        <ImageView
                            android:id="@+id/ivMusicImage1Prev"
                            style="@style/iv_h_item"
                            android:src="@drawable/prev"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage1Pause"
                            style="@style/iv_h_item"
                            android:src="@drawable/pause"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage1"
                            style="@style/iv_h_item"
                            android:src="@drawable/play"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage1Next"
                            style="@style/iv_h_item"
                            android:src="@drawable/next"></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll2"
                    style="@style/l_h_item">

                    <TextView
                        android:id="@+id/tvMusic2"
                        style="@style/tv_h_item"></TextView>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_img2"
                        style="@style/llimg_h_item">

                        <ProgressBar
                            android:id="@+id/ivMusicImageLoad2_"
                            style="@style/pb_h_item"></ProgressBar>

                        <ImageView
                            android:id="@+id/ivMusicImage2Prev"
                            style="@style/iv_h_item"
                            android:src="@drawable/prev"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage2Pause"
                            style="@style/iv_h_item"
                            android:src="@drawable/pause"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage2"
                            style="@style/iv_h_item"
                            android:src="@drawable/play"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage2Next"
                            style="@style/iv_h_item"
                            android:src="@drawable/next"></ImageView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll3"
                    style="@style/l_h_item">

                    <TextView
                        android:id="@+id/tvMusic3"
                        style="@style/tv_h_item"></TextView>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_img3"
                        style="@style/llimg_h_item">

                        <ProgressBar
                            android:id="@+id/ivMusicImageLoad3_"
                            style="@style/pb_h_item"></ProgressBar>

                        <ImageView
                            android:id="@+id/ivMusicImage3Prev"
                            style="@style/iv_h_item"
                            android:src="@drawable/prev"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage3Pause"
                            style="@style/iv_h_item"
                            android:src="@drawable/pause"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage3"
                            style="@style/iv_h_item"
                            android:src="@drawable/play"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage3Next"
                            style="@style/iv_h_item"
                            android:src="@drawable/next"></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll4"
                    style="@style/l_h_item">

                    <TextView
                        android:id="@+id/tvMusic4"
                        style="@style/tv_h_item"></TextView>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_img4"
                        style="@style/llimg_h_item">

                        <ProgressBar
                            android:id="@+id/ivMusicImageLoad4_"
                            style="@style/pb_h_item"></ProgressBar>

                        <ImageView
                            android:id="@+id/ivMusicImage4Prev"
                            style="@style/iv_h_item"
                            android:src="@drawable/prev"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage4Pause"
                            style="@style/iv_h_item"
                            android:src="@drawable/pause"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage4"
                            style="@style/iv_h_item"
                            android:src="@drawable/play"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage4Next"
                            style="@style/iv_h_item"
                            android:src="@drawable/next"></ImageView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/ll5"
                    style="@style/l_h_item">

                    <TextView
                        android:id="@+id/tvMusic5"
                        style="@style/tv_h_item"></TextView>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/ll_img5"
                        style="@style/llimg_h_item">

                        <ProgressBar
                            android:id="@+id/ivMusicImageLoad5_"
                            style="@style/pb_h_item"></ProgressBar>

                        <ImageView
                            android:id="@+id/ivMusicImage5Prev"
                            style="@style/iv_h_item"
                            android:src="@drawable/prev"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage5Pause"
                            style="@style/iv_h_item"
                            android:src="@drawable/pause"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage5"
                            style="@style/iv_h_item"
                            android:src="@drawable/play"></ImageView>

                        <ImageView
                            android:id="@+id/ivMusicImage5Next"
                            style="@style/iv_h_item"
                            android:src="@drawable/next"></ImageView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>